<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.sberbank.learning.battery.MainActivity">

    <ImageView
        android:id="@+id/battery_image"
        android:layout_width="@dimen/battery_width"
        android:layout_height="@dimen/battery_height"
        android:src="@drawable/battery"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/battery_margin"
        android:layout_marginBottom="@dimen/battery_margin"
        />

    <TextView
        android:id="@+id/battery_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/battery_image"


        tools:text="100%"
        />

    <TextView
        android:id="@+id/battery_technology"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/battery_percentage"
        />

    <TextView
        android:id="@+id/battery_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
